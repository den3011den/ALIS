@using ALIS_Utility

<br />
<div class="border p-3 bg-white">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-info">Список персон </h2>
        </div>
    </div>
    <div class="d-flex justify-content-between mb-3 row">
        <label class="col-6"><input id="show_archive_records" type="checkbox"> Показать архивные записи</label>
        <div class="row">
            <div class="text-right pr-0">
                @*<a asp-controller="Person" asp-action="PrintBarCodeSelected" id="print_bar_code_selected" class="btn btn-outline-info text-right">*@
                <a id="print_bar_code_selected" class="btn btn-outline-info text-right">
                    <i class="fas fa-print"></i> &nbsp; Печатать карточки выбраных персон
                </a>
            </div>
            <div class="text-right pr-4">
                <a asp-controller="Person" asp-action="Create" class="btn btn-primary text-right">
                    <i class="fas fa-plus"></i> &nbsp; Создать новую персону
                </a>
            </div>

        </div>
    </div>

    <hr>
    <table id="tblData" class="table table-striped table-bordered pt-2" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th></th>
                <th>ИД</th>
                <th>Наименование</th>
                <th>Штрих-код</th>
                <th>Группа</th>
                <th>Пользователь</th>
                <th>Роль</th>
                <th>Архив</th>
                <th></th>
            </tr>
        </thead>
    </table>
    @*@WC.PhotoPath;*@
    @*@WC.NoPhotoPath*@
</div>

@section Scripts{
    <script type="text/javascript">
        window.api_url = '/person/GetPersonList';
        window.model_name = 'Person';
        window.selected_items = new Set();
        window.print_selected_url = '/Person/PrintBarCodeSelected';
        //window.alis_utility_wc_photopath = '\\images\\person\\';
        //window.alis_utility_wc_nophotopath = '\\images\\person\\no_photo.jpg'
    </script>
    <script src="~/js/person.js"></script>

}
