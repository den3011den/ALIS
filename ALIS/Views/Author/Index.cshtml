
<br />
<div class="border p-3 bg-white">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-info">Список авторов </h2>
        </div>
    </div>
    <div class="d-flex justify-content-between mb-3 row">
        <label class="col-6"><input id="show_archive_records" type="checkbox"> Показать архивные записи</label>
        <div class="col-6 text-right">
            <a asp-controller="Author" asp-action="Create" class="btn btn-primary text-right">
                <i class="fas fa-plus"></i> &nbsp; Создать нового автора
            </a>
        </div>
    </div>

    <hr>
    <table id="tblData" class="table table-striped table-bordered pt-2" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>ИД</th>
                <th>Наименование</th>
                <th>Архив</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
    </table>

</div>

@section Scripts{
    <script type="text/javascript">
            window.api_url = '/author/GetAuthorList';
            window.model_name = 'Author';
    </script>
    <script src="~/js/catalog.js"></script>
}
